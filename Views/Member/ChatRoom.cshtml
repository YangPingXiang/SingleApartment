    </div>
    <script>
        function AddMessageFromOther(UserID, message) {
            let img = $("#" + UserID + "pic").prop('src');
            var MsgHtml = '<div class= "d-flex justify-content-start mb-4">'
                + '<div class="img_cont_msg">'
                + '<h6>' + UserID + '</h6>'
                + '<img src="' + img +'" class="rounded-circle user_img_msg">'
                + '</div>'
                + '<div class="msg_cotainer">'
                + message
                + '<span class="msg_time">now</span>'
                + '</div>'
                + '</div>';
            return MsgHtml;
        }
        function AddMessageFromMe(UserID, message) {
            var MsgHtml = '<div class="d-flex justify-content-end mb-4">'
                + '<div class="msg_cotainer_send">'
                + message
                + '<span class="msg_time">now</span>'
                + '</div>'
                + '<div class="img_cont_msg">'
                + '<img src = "@Model.fImage" class="rounded-circle user_img_msg" >'
                + '</div></div>';
            return MsgHtml;
        }
    </script>
