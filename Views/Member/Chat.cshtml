
@{
    ViewBag.Title = "Chat";
    Layout = "~/Views/Shared/HomePage/_LayoutHomeMember.cshtml";
}

<div style="background: url('../../Content/SignalR/loading.gif');background-size:100% 100%; background-repeat:no-repeat; width: 100%; height: 100%">
    <iframe id="chat" src="@Url.Action("ChatRoom", "Member")" style="position:relative; width:100%; height:100%" hidden></iframe>
    

</div>
<script>
    $(function () {
        $('#chat').delay(1200)
        $('#chat').fadeIn("fast");
    });

</script>