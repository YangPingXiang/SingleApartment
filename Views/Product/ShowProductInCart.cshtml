                                    {
                                        <tr>
                                            <td class="sop-cart an-shop-cart">
                                                <a href="#"><img class="primary-image" alt="" src="@DisplayImage(item.prodpic.ProductPicture)"></a>
                                                <a href="#">@item.ProductName</a>
                                            </td>
